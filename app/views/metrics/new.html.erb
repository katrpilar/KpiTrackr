
<div class="row">
	<div class="col s8 offset-s3">
		<div class="container">
			<ul class="collection with-header card-header-section">
				<li class="collection-header profile-orange"><h5>Add a Kpi Metric Update</h5></li>
	      <li class="collection-item transparent"><h4><%=@kpi.name%></h4></li>
	      <li class="collection-item transparent valign-center">
	      	<div class="row valign-center">
		      	<div class="col s4 left-align">
		      		<h6 style="border-right:1px solid #000;height:100%">DATE</h6>
		      	</div>
		      	<div class="col s8">
		      	 <h6><%= @kpi.target_start_date%> TO <%=@kpi.target_end_date%></h6>
		      	</div>
		      </div>
      	</li>
	      <li class="collection-item transparent">
	      	<div class="row valign-center">
		      	<div class="col s4 left-align">
		      		<h6 style="border-right:1px solid #000;height:100%">GOAL</h6>
		      	</div>
		      	<div class="col s8">
		      		<%=@kpi.target%>
		      	</div>
		      </div>	      		
	      </li>
	      <li class="collection-item transparent">
	      	<div class="row valign-center">
		      	<div class="col s4 left-align">
		      		<h6 style="border-right:1px solid #000;height:100%">LAST UPDATE</h6>
		      	</div>
		      	<div class="col s8">
		      		<%=@kpi.current_actual%>
		      	</div>
		      </div>		      		
      	</li>
	    </ul>
		<%= form_for([@kpiable, @kpi, @metric]) do |f| %>
		<% if @metric.errors.any? %>
			    <div id="error_explanation">
			      <h2>There were some errors:</h2>
			      <ul>
			        <% @metric.errors.full_messages.each do |message| %>
			          <li><%= message %></li>
			        <% end %>
			      </ul>
			    </div>
			  <% end %>

			<%= f.label :metric%>
			<%= f.number_field :metric %>
			<%= f.submit "Submit", :class => "btn-large white-text" %>
		<% end %>
		</div>
	</div>
</div>


