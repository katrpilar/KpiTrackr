
<div class="row">
	<div class="col s6 offset-s3">
		<div class="container">
			<ul class="collection with-header">
				<li class="collection-header"><h5>Add a Kpi Metric Update</h5></li>
	      <li class="collection-item">KPI: <%=@kpi.name%><br>GOAL: <%=@kpi.target%><br>DATE: <%= @kpi.target_start_date%> TO <%=@kpi.target_end_date%></li>
	    </ul>
		<%= form_for([@kpiable, @kpi, @metric]) do |f| %>
		<% if @metric.errors.any? %>
			    <div id="error_explanation">
			      <h2>There were some errors:</h2>
			      <ul>
			        <% @metric.errors.full_messages.each do |message| %>
			          <li><%= message %></li>
			        <% end %>
			      </ul>
			    </div>
			  <% end %>

			<%= f.label :metric%>
			<%= f.number_field :metric %>
			<%= f.submit "Submit" %>
		<% end %>
		</div>
	</div>
</div>


