

<h4>Company KPIs</h4>
<ul>
	<%@kpis.each do |kpi|%>
		<li>
			Name: <%=kpi.name%> - Unit: <%=kpi.unit%> - Actual: <%=kpi.current_actual%> - Target: <%=kpi.target%> - Start: <%=kpi.target_start_date%> End: <%=kpi.target_end_date%>

			<br>
			<ul>
				<%kpi.metrics.each do |met|%>
					<li>
						<%=met.metric%>
					</li>

				<%end%>
			</ul>

			<%=link_to "Edit", "#{kpi_path(kpi) + '/edit'}" %>
		</li>
	<%end%>
</ul>

<a class="waves-effect waves-light btn" href="/kpis/new">Add New</a>